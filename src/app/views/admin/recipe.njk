{% extends "layoutAdmin.njk" %}

{% block head %}

    <link rel="stylesheet" href="/css/admin/form.css">
    <link rel="stylesheet" href="/css/admin/recipe.css">

{% endblock %}

{% block content %}
    
    <!-- ===== SHOW RECIPE ===== -->

    <section class="container">

        <div class="intro">
            <h2>Receita: {{items.title}}</h2>
            <a href="/admin/recipes/{{items.id}}/edit" id="only-button" style="text-decoration: none;">Editar receita</a>
        </div>

        <div class="recipe">

            <img src="{{items.image}}" alt="Foto do {{items.title}}">
            
            <div class="recipe-description">
                <h1>{{items.title}}</h1>
                <p>por {{items.chef_name}}</p>

            </div>
            <div class="recipe-info ">
                <dl class="js-accordion">

                    <dt>Ingredientes</dt>
                    <dd>
                        {% for ingredients in items.ingredients %}
                        <li>{{ingredients}}</li>
                        {% endfor %}
                    </dd>

                    <dt>Modo de Preparo</dt>
                    <dd>
                        {% for preparation in items.preparation %}   
                        <li>{{preparation}}</li>
                        {% endfor %}
                    </dd>

                    <dt>Informações adicionais</dt>
                    <dd>{{ items.information | striptags(true) | escape | nl2br }}</dd>
                </dl>
            </div>

        </div>


    </section>

{% endblock %}