{% extends "layoutAdmin.njk" %}

{% block head %}

    <link rel="stylesheet" href="/css/recipe.css">

    <title> {{chefs.title}} | Foodfy</title>

{% endblock %}

{% block content %}
    
    <!-- ===== PRODUTCS ===== -->

<section class="max-width">

    <div class="intro">
        <h2>Chef: {{ chefs.name }}</h2>
        <a href="/admin/chefs/{{chefs.id}}/edit" id="only-button" style="text-decoration: none;">Editar chef</a>
    </div>

    <div class="recipe">

        <img src="{{chefs.avatar_url}}" alt="Fodo do {{item.title}}">
        
        <div class="recipe-description">
            <h1>{{items.title}}</h1>
            <p>por {{items.author}}</p>

        </div>
        <div class="recipe-info ">
            <dl class="js-accordion">

                <dt>Ingredientes</dt>
                <dd>
                    {% for ingredients in items.ingredients %}
                    <li>{{ingredients}}</li>
                    {% endfor %}
                </dd>

                <dt>Modo de Preparo</dt>
                <dd>
                    {% for preparation in items.preparation %}   
                    <li>{{preparation}}</li>
                    {% endfor %}
                </dd>

                <dt>Informações adicionais</dt>
                <dd>{{ items.information | striptags(true) | escape | nl2br }}</dd>
            </dl>
        </div>

    </div>


</section>

{% endblock %}