{% extends "layoutUser.njk" %}

{% block head %}

    <link rel="stylesheet" href="/css/user/index.css">
    
    <title>Home | Foodfy</title>

{% endblock %}

{% block header %}
    <form action="/admin/recipes" method="get">
        <input
            type="text" 
            name="filter" 
            placeholder=" Buscar uma receita"
        >
        <button type="submit">Buscar</button>            
    </form>
{% endblock %}

{% block content %}
    
    <!-- ===== MAIN ===== -->

    <main class="bg-main max-width">
        <div class="intro">
            <h1>As melhores receitas</h1>
            <p>Aprenda a construir os melhores pratos com receitas 
            criadas por profissionais do mundo inteiro.</p>
        </div>
        <img src="/assets/chef.png" alt="" srcset="">
    </main>
    <section class="max-width">

    <!-- ===== RECIPES ===== -->   

        <div class="recipes">

            <h2>Mais acessadas</h2>

            <div class="recipes-item">
                {% for item in items %}
                <div>
                    <a href="/recipes/{{ item.id }}"><img src="{{item.image}}" alt="Foto da receita {{item.title}}"></a>
                    <a href="/recipes/{{ item.id }}"><h3>{{item.title}}</h3></a>
                    <p>por</p>
                </div>
                {% endfor %}
            </div>

        </div>
    </section>

{% endblock %}
