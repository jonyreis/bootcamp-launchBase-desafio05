{% extends "layoutUser.njk" %}

{% block head %}
    <link rel="stylesheet" href="/css/user/index.css">
    
    <title>Receitas | Foodfy</title>

{% endblock %}

{% block header %}
    <form action="" method="get">
        <input type="search" name="" placeholder=" Buscar uma receita">
        <button type="submit">Buscar</button>            
    </form>
{% endblock %}

{% block content %}
    
    <section class="max-width">

    <!-- ===== RECIPES ===== -->        

        <div class="recipes">

            <h2>Receitas</h2>

            <div class="recipes-item">
                {% for item in items %}
                <div>
                    <a href="/recipes/{{ item.id }}"><img src="{{item.image}}" alt="Foto da receita {{item.title}}"></a>
                    {# <h3 id="{{ item.id }}">{{item.title}}</h3> #}
                    <p>{{item.chef_id}}</p>
                    <a href="/recipes/{{ item.id }}">{{item.title}}</a>
                </div>
                {% endfor %}

        </div>

    </section>
{% endblock %}
